@inherits LandingPageBase

<div class="LandingPage">
    <nav class="Page-container PageHeader NavBar">
        <button class="Button buy-ticket-button" @onclick="OpenModal">
            @ViewModel.BuyTicketBlock.Heading
        </button>
        <LanguageSelector ExistingLanguages="@ViewModel.ExistingLanguages" Language="@ViewModel.Language" />
    </nav>

    <Hero Title="@ViewModel.Title"
          Subtitle="@ViewModel.Subtitle"
          HeroImage="@ViewModel.HeroImage" />
    
    <EpiLink CssClass="Button modal-default-button landing-page-button"
             Url="@ViewModel.ArtistsLink.ExpandedValue.Url">
        @ViewModel.ArtistsLink.ExpandedValue.Name
    </EpiLink>
    
    <main class="Page-container">
        <div v-epi-edit="'MainContentArea'">
            <ContentArea Model="@ViewModel.MainContentArea" />
        </div>
    </main>

    <footer>
        <div v-epi-edit="'FooterContentArea'">
            <ContentArea Model="@ViewModel.FooterContentArea"></ContentArea>
        </div>
        <div class="FooterBottom">
            <h6>&copy; Music Festival 2020</h6>
        </div>
    </footer>

    <Modal>
        <BuyTicketBlock PagePropertyName="BuyTicketBlock" Heading="@ViewModel.BuyTicketBlock.Heading" Message="@ViewModel.BuyTicketBlock.Heading" />
    </Modal>
</div>


